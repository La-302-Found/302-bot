{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "db": ["./database/index.ts"],
      "db/schema": ["./database/schema/index.ts"]
    },
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
